<div class='container'>
  <div class='row'>
    <div class='column'>
      <p>
        <strong>Date / Time</strong>
        <%= message.created_at %>
      </p>
    </div>

    <div class='col'>
      <p>
        <strong>Note:</strong>
        <%= message.body %>
      </p>
    </div>
  </div>
</div>

<%= link_to "Destroy message", [message.user, message], data: { turbo_method: :delete,
              turbo_confirm: "Are you sure?"}, class:'msg' %>