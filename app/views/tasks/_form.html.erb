<%= form_with model: [ current_user, @task ] do |form| %>
  <form class="mb-5">
    <div class="container">
      <div class="card-header">
        <h4></h4>
      </div>
      <div class="form-row">
        <div class="form-group col-md-6">
          <label>Title</label>
          <%= form.text_field 'title', class: 'form-control form-control-lg' %>
        </div>
        <div class="form-group col-md-6">
          <label>Start Date</label>
          <%= form.date_field :started_at, class: 'form-control form-control-lg' %>
        </div>
      </div>
      <div class="form-group">
        <label>Description</label>
        <%= form.text_area 'description', class: 'form-control form-control-lg' %>
      </div>
      <%= form.submit 'Save', class: "btn btn-primary" %>
    </div>
  </form>
<% end %>
