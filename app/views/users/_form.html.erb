              </div>

              <div class="text-center text-lg-start mt-4 pt-2">
                <%= form.submit "SignUp", class: "btn btn-primary btn-lg signup" %>
                <span class="small fw-bold mt-2 pt-1 mb-0">Have an account?
                  <%= link_to 'Login', new_session_path, class: "link-danger" %></span>
              </div>
            </div>
          </form>
