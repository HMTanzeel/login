      <div class="col-md-9 col-lg-6 col-xl-5">
        <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp" class="img-fluid"
          alt="Sample image">
      </div>
      <div class="col-md-10 col-lg-8 col-xl-6 offset-xl-1">
        <form>
          <div class="divider d-flex align-items-center my-4">
            <p class="text-center fw-bold mx-3 mb-0">SIGNUP</p>
          </div>

          
          <div class="align-items-center">
            <!-- Name input -->
            <div class="col-md-7 form-outline mb-4">
              <%= form.text_field :name, class: "form-control form-control-lg",type:"name",
                id:"form4Example1", placeholder:"Enter Your Name"%>
            </div>

            <!-- Mobile input -->
            <div class="col-md-7 form-outline mb-4">
              <%= form.number_field :mobile, class: "form-control form-control-lg",type:"mobile",
                id:"form4Example2", placeholder:"Enter Mobile Number"%>
            </div>

            <!-- Email input -->
            <div class="col-md-7 form-outline mb-4">
              <%= form.text_field :email, class: "form-control form-control-lg",type:"email",
                id:"form4Example3", placeholder:"Enter a Valid Email"%>
            </div>

            <!-- Password input -->
            <div class="col-md-7 form-outline mb-3">
              <%= form.password_field :password, class: "form-control form-control-lg",
                type:"password", id:"form4Example4", placeholder:"Password"%>
            </div>

            <!-- Password Confirmation input -->
            <div class="col-md-7 form-outline mb-3">
              <%= form.password_field :password_confirmation, class: "form-control form-control-lg",
                type:"Retype_password", id:"form4Example4", placeholder:"Retype Password"%>
            </div>

