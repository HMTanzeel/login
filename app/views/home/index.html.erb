<% if current_user %>
  Logged In as: <%= current_user.email %>
  <%= link_to 'Log Out', session_path(:user_id), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>

  <h2>Add a Note:</h2>
  <%= render 'messages/form' %>

  <h2>Notes</h2>
  <%= render current_user.messages %>

<% else %>
  <%= link_to 'Sign Up', new_user_path %> or
  <%= link_to 'Log In', new_session_path %>
<% end %>
<p><%= notice %></p>
<p>Lorem ipsum</p>