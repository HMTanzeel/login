<% if current_user %>
  <div class='container'>
    <h3> Logged Email: <%= current_user.email %> </h3>
    <h4> Logged In as: <%= current_user.role %> </h4>
    <%= link_to "Edit User", edit_user_path(current_user) %>
    <p class='notice'><%= notice %></p>
    <%= link_to 'Log Out', session_path(:user_id),
      data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: 'btn' %>

