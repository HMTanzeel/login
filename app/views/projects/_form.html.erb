<%= form_with model: [current_user, @project] do |form| %>
  <div class='form-row'>
    <div class='form-group col-md-6'>
      <label>Title</label>
      <%= form.text_field 'title', class: 'form-control form-control-lg' %>
    </div>
    <div class='form-group col-md-6'>
      <label>Start Date</label>
      <%= form.date_field 'started_at', class: 'form-control form-control-lg' %>
    </div>
    <div class='form-group col-md-6'>
      <label>End Date</label>
      <%= form.date_field 'close_at', class: 'form-control form-control-lg' %>
    </div>
    <div class='form-group col-md-6 mt-lg-3'>
      <p></p>
      <%= form.select(:project_type, project_type_options, { include_blank: "select project type" }, class: 'form-control form-control-lg') %>
    </div>
    <div class='form-group col-md-6 mt-lg-3'>
      <p></p>
      <%= form.select :active, [['Active', true], ['Inactive', false]], { include_blank: "select status" }, class: 'form-control form-control-lg' %>
    </div>
  </div>
  <div class='form-group'>
    <label>Description</label>
    <%= form.text_area 'description', class: 'form-control form-control-lg' %>
  </div>
  <%= form.submit 'Save', class: 'btn btn-primary' %>
<% end %>
